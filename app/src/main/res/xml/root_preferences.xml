<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/DarkTheme">

        <SwitchPreferenceCompat
            app:key="dark_theme"
            app:title="@string/DarkTheme" />

        <SwitchPreferenceCompat
            app:key="use_inverted_numeric_keyboard"
            app:title="@string/UseInvertedNumericKeyboard" />

        <SwitchPreferenceCompat
            app:key="disable_notifications"
            app:title="@string/DisableNotifications" />

    </PreferenceCategory>

</PreferenceScreen>