<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_columbia"

        tools:context=".ui.ProfileFragment">

    <!--region Guide Lines-->
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="20dp" />
    <!--endregion-->

    <!--region Profile pic and username-->
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/cardView"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/blue_free_speech"
                android:orientation="horizontal"
                android:gravity="start|center_vertical">

            <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="20dp"

                    app:cardCornerRadius="100dp"
                    app:cardBackgroundColor="@color/white">

                <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        tools:src="@drawable/ic_user_profile_image_example" />
            </androidx.cardview.widget.CardView>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="user_name"
                    android:textSize="35sp"
                    android:layout_margin="20dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <!--endregion-->

    <!--region Email-->
    <TextView
            android:id="@+id/tvEmail"
            android:text="@string/frgProfile.tvEmail.text"

            style="@style/frgProfile_LabelFor_TextInputLayout"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/glStart"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            app:layout_constraintVertical_bias="0.1" />

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEmail"

            style="@style/frgProfile_TextInputLayout"

            app:layout_constraintStart_toStartOf="@+id/glStart"
            app:layout_constraintEnd_toEndOf="@id/glEnd"
            app:layout_constraintTop_toBottomOf="@+id/tvEmail"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tieEmail"
                android:inputType="textEmailAddress"

                style="@style/frgProfile_TextInputEditText"

                tools:text="user@gmail.com" />
    </com.google.android.material.textfield.TextInputLayout>
    <!--endregion-->

    <!--region Password-->
    <TextView
            android:id="@+id/tvPassword"
            android:text="@string/frgProfile.tvPassword.text"

            style="@style/frgProfile_LabelFor_TextInputLayout"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/glStart"
            app:layout_constraintTop_toBottomOf="@+id/tvEmail"
            app:layout_constraintVertical_bias="0.25" />

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPassword"

            style="@style/frgProfile_TextInputLayout"

            app:layout_constraintStart_toStartOf="@+id/glStart"
            app:layout_constraintEnd_toEndOf="@id/glEnd"
            app:layout_constraintTop_toBottomOf="@+id/tvPassword"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tiePassword"
                android:inputType="textPassword"

                style="@style/frgProfile_TextInputEditText"

                tools:text="password" />
    </com.google.android.material.textfield.TextInputLayout>
    <!--endregion-->

</androidx.constraintlayout.widget.ConstraintLayout>