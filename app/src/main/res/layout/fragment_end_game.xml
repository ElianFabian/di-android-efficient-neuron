<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_midnight"
        android:orientation="vertical"
        tools:context=".ui.endgame.EndGameFragment">

    <TextView
            android:text="@string/frgEndGame__labelFor_tvTotalTime_text"
            android:layout_marginTop="40dp"
            style="@style/EndGame_LabelFor_TextView" />

    <TextView
            android:id="@+id/tvTotalTime"
            android:layout_marginBottom="30dp"
            style="@style/EndGame_TextView_Time"
            tools:text="35s" />

    <TextView
            android:text="@string/frgEndGame__tvTimePerGame_text"
            style="@style/EndGame_LabelFor_TextView" />

    <TextView
            android:id="@+id/TimePerGame"
            style="@style/EndGame_TextView_Time"
            tools:text="2s" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|bottom">

        <Button
                android:id="@+id/btnContinue"

                style="@style/Button"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/frgEndGame__btnContinue_text"
                />
    </LinearLayout>

</LinearLayout>