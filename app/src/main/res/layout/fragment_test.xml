<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_gray_900"
    android:orientation="vertical"
    tools:context=".feature_tests.presentation.test.TestFragment"
    >

    <!--region Guide lines-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/_glStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/_10sdp"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/_glEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/_10sdp"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/_glTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/_5sdp"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/_glBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="@dimen/_10sdp"
        />
    <!--endregion-->

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/_llOperation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/_glEnd"
        app:layout_constraintStart_toStartOf="@+id/_glStart"
        app:layout_constraintTop_toTopOf="@+id/_glTop"
        >

        <TextView
            android:id="@+id/tvFirstNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_xlarge3"
            android:textStyle="bold"
            tools:text="2"
            />

        <TextView
            android:id="@+id/tvOperationSymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_xlarge3"
            android:textStyle="bold"
            tools:text="+"
            />

        <TextView
            android:id="@+id/tvSecondNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_xlarge3"
            android:textStyle="bold"
            tools:text="2"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/tietInput"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/teal_200"
        android:cursorVisible="false"
        android:focusable="false"
        android:fontFamily="@font/comfortaa_bold"
        android:inputType="none"
        android:maxLines="1"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_large2"
        app:layout_constraintBottom_toTopOf="@+id/_glBottom"
        app:layout_constraintEnd_toEndOf="@+id/_llOperation"
        app:layout_constraintStart_toStartOf="@+id/_llOperation"
        app:layout_constraintTop_toBottomOf="@+id/_llOperation"
        app:layout_constraintVertical_bias="0.17"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llKeyBoard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/_glBottom"
        app:layout_constraintEnd_toStartOf="@+id/_glEnd"
        app:layout_constraintStart_toStartOf="@+id/_glStart"
        app:layout_constraintTop_toBottomOf="@+id/tietInput"
        app:layout_constraintVertical_bias="0.53"
        >

        <androidx.appcompat.widget.LinearLayoutCompat
            style="@style/CalculatorButton_Row"
            android:theme="@style/FragmentTestTheme_CalculatorButtonRow"
            >
            <Button
                android:id="@+id/btnNextTest"
                style="@style/CalculatorButton.Action"
                android:layout_span="3"
                android:backgroundTint="@color/green_a400"
                android:text="&gt;"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            style="@style/CalculatorButton_Row"
            android:theme="@style/FragmentTestTheme_CalculatorButtonRow"
            >

            <Button
                style="@style/CalculatorButton.Numeric"
                android:tag="@string/tag_numeric_button"
                android:text="1"
                />

            <Button
                style="@style/CalculatorButton.Numeric"
                android:tag="@string/tag_numeric_button"
                android:text="2"
                />

            <Button
                style="@style/CalculatorButton.Numeric"
                android:tag="@string/tag_numeric_button"
                android:text="3"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            style="@style/CalculatorButton_Row"
            android:theme="@style/FragmentTestTheme_CalculatorButtonRow"
            >

            <Button
                style="@style/CalculatorButton.Numeric"
                android:tag="@string/tag_numeric_button"
                android:text="4"
                />

            <Button
                style="@style/CalculatorButton.Numeric"
                android:tag="@string/tag_numeric_button"
                android:text="5"
                />

            <Button
                style="@style/CalculatorButton.Numeric"
                android:tag="@string/tag_numeric_button"
                android:text="6"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            style="@style/CalculatorButton_Row"
            android:theme="@style/FragmentTestTheme_CalculatorButtonRow"
            >

            <Button
                style="@style/CalculatorButton.Numeric"
                android:tag="@string/tag_numeric_button"
                android:text="7"
                />

            <Button
                style="@style/CalculatorButton.Numeric"
                android:tag="@string/tag_numeric_button"
                android:text="8"
                />

            <Button
                style="@style/CalculatorButton.Numeric"
                android:tag="@string/tag_numeric_button"
                android:text="9"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            style="@style/CalculatorButton_Row"
            android:theme="@style/FragmentTestTheme_CalculatorButtonRow"
            >

            <Button
                style="@style/FragmentTest_CalculatorButton.Numeric"
                android:layout_weight="2"
                android:tag="@string/tag_numeric_button"
                android:text="0"
                />

            <Button
                android:id="@+id/btn_clear_input"
                style="@style/FragmentTest_CalculatorButton.Action"
                android:backgroundTint="@color/red_700"
                android:text="&lt;"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>