<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_sapphire"
    android:orientation="vertical"
    android:paddingVertical="@dimen/_10sdp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSelectAPicture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue_sapphire"
        android:text="@string/SelectAPicture"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_medium2"
        app:icon="@drawable/ic_image"
        app:iconGravity="textStart"
        app:iconSize="@dimen/_40sdp"
        app:iconTint="@color/white" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDeleteCurrentPicture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue_sapphire"
        android:text="@string/DeleteCurrentPicture"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/red_700"
        android:textSize="@dimen/textSize_medium2"
        app:icon="@drawable/ic_delete_outline"
        app:iconGravity="textStart"
        app:iconSize="@dimen/_40sdp"
        app:iconTint="@color/red_700" />

</androidx.appcompat.widget.LinearLayoutCompat>