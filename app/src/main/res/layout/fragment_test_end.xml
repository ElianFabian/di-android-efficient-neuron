<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_32sdp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/frgEndGame_LabelFor_TextView_Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:text="@string/array_test_modes_time" />

                <TextView
                    android:id="@+id/tvTime"
                    style="@style/frgEndGame_TextView_Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginBottom="30dp"
                    tools:text="20 s" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/frgEndGame_LabelFor_TextView_Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:text="@string/array_test_modes_tests" />

                <TextView
                    android:id="@+id/tvTests"
                    style="@style/frgEndGame_TextView_Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginBottom="30dp"
                    tools:text="12" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            style="@style/frgEndGame_LabelFor_TextView_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_18sdp"
            android:text="@string/frgEndGame_tvTestsPerSecond_label_text" />

        <TextView
            android:id="@+id/tvAverageSpeed"
            style="@style/frgEndGame_TextView_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_18sdp"
            tools:text="2" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <View style="@style/Utils_LinearLayoutSeparator" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="@dimen/_10sdp">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lcTestGraph"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/grey_900" />

    </com.google.android.material.card.MaterialCardView>

    <View style="@style/Utils_LinearLayoutSeparator" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnContinue"
        style="@style/ButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/_18sdp"
        android:text="@string/frgEndGame_btnContinue_text" />

</androidx.appcompat.widget.LinearLayoutCompat>