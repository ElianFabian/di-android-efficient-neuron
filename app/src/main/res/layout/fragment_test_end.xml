<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:orientation="vertical"
    tools:context=".feature_tests.presentation.test_end.TestEndFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/_18sdp">

        <!--This can be the total time or the total tests-->
        <TextView
            android:id="@+id/tvTimeOrTests_label"
            style="@style/frgEndGame_LabelFor_TextView_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            tools:text="Time/Tests"/>

        <TextView
            android:id="@+id/tvTimeOrTests"
            style="@style/frgEndGame_TextView_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            tools:text="35 s" />

        <TextView
            style="@style/frgEndGame_LabelFor_TextView_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/frgEndGame_tvTimePerGame_label_text" />

        <TextView
            android:id="@+id/TimePerGame"
            style="@style/frgEndGame_TextView_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2 s" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <View style="@style/Utils_LinearLayoutSeparator" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnContinue"
        style="@style/ButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/_18sdp"

        android:text="@string/frgEndGame_btnContinue_text" />

</androidx.appcompat.widget.LinearLayoutCompat>