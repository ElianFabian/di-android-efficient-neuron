<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fillViewport="true">

	<androidx.appcompat.widget.LinearLayoutCompat
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/background_dark"
		android:orientation="vertical"
		android:paddingHorizontal="@dimen/_12sdp"
		android:paddingTop="@dimen/_32sdp">

		<androidx.appcompat.widget.LinearLayoutCompat
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<androidx.appcompat.widget.LinearLayoutCompat
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/_20sdp"
				android:orientation="horizontal">

				<androidx.appcompat.widget.LinearLayoutCompat
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="vertical">

					<com.google.android.material.textview.MaterialTextView
						style="@style/TextView_Label"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/arrayTest_modes_time" />

					<com.google.android.material.textview.MaterialTextView
						android:id="@+id/tvTime"
						style="@style/TextView_Value"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						tools:text="20 s" />

				</androidx.appcompat.widget.LinearLayoutCompat>

				<androidx.appcompat.widget.LinearLayoutCompat
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="@dimen/_18sdp"
					android:orientation="vertical">

					<com.google.android.material.textview.MaterialTextView
						style="@style/TextView_Label"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/generic_operations" />

					<com.google.android.material.textview.MaterialTextView
						android:id="@+id/tvOperations"
						style="@style/TextView_Value"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						tools:text="12" />

				</androidx.appcompat.widget.LinearLayoutCompat>

			</androidx.appcompat.widget.LinearLayoutCompat>

			<androidx.appcompat.widget.LinearLayoutCompat
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/_20sdp"
				android:orientation="horizontal">

				<androidx.appcompat.widget.LinearLayoutCompat
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="vertical">

					<com.google.android.material.textview.MaterialTextView
						style="@style/TextView_Label"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/generic_opm" />

					<com.google.android.material.textview.MaterialTextView
						android:id="@+id/tvOpm"
						style="@style/TextView_Value"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						tools:text="56" />

				</androidx.appcompat.widget.LinearLayoutCompat>

				<androidx.appcompat.widget.LinearLayoutCompat
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="@dimen/_18sdp"
					android:orientation="vertical">

					<com.google.android.material.textview.MaterialTextView
						style="@style/TextView_Label"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/generic_raw" />

					<com.google.android.material.textview.MaterialTextView
						android:id="@+id/tvRawOpm"
						style="@style/TextView_Value"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						tools:text="78" />

				</androidx.appcompat.widget.LinearLayoutCompat>

				<androidx.appcompat.widget.LinearLayoutCompat
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="@dimen/_18sdp"
					android:orientation="vertical">

					<com.google.android.material.textview.MaterialTextView
						style="@style/TextView_Label"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/generic_errors" />

					<com.google.android.material.textview.MaterialTextView
						android:id="@+id/tvErrors"
						style="@style/TextView_Value"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						tools:text="2" />

				</androidx.appcompat.widget.LinearLayoutCompat>

			</androidx.appcompat.widget.LinearLayoutCompat>

		</androidx.appcompat.widget.LinearLayoutCompat>

		<com.google.android.material.card.MaterialCardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginVertical="@dimen/_10sdp"
			android:backgroundTint="@color/blue_sapphire"
			app:cardCornerRadius="@dimen/_10sdp">

			<com.github.mikephil.charting.charts.LineChart
				android:id="@+id/lcTestGraph"
				android:layout_width="match_parent"
				android:layout_height="@dimen/_280sdp"
				android:layout_marginVertical="@dimen/_5sdp"
				android:background="@color/blue_sapphire" />

		</com.google.android.material.card.MaterialCardView>

		<com.google.android.material.textview.MaterialTextView
			android:id="@+id/tvFailedOperations"
			style="@style/TextView_Label"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/_5sdp"
			android:text="@string/frgTestEnd_LabelFor_rvFailedOperations_text" />

		<com.google.android.material.card.MaterialCardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:backgroundTint="@color/background_card"
			app:strokeColor="@color/background_card"
			app:strokeWidth="@dimen/_5sdp">

			<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/rvFailedOperations"
				android:layout_width="match_parent"
				android:layout_height="@dimen/_280sdp"
				android:layout_marginHorizontal="@dimen/_6sdp"
				android:layout_marginVertical="@dimen/_3sdp"
				app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
				tools:itemCount="8"
				tools:listitem="@layout/item_failed_operation" />

		</com.google.android.material.card.MaterialCardView>

		<View style="@style/Utils_LinearLayoutSeparator" />

		<com.google.android.material.button.MaterialButton
			android:id="@+id/btnContinue"
			style="@style/ButtonStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_marginVertical="@dimen/_18sdp"
			android:text="@string/frgEndGame_btnContinue_text" />

	</androidx.appcompat.widget.LinearLayoutCompat>

</androidx.core.widget.NestedScrollView>