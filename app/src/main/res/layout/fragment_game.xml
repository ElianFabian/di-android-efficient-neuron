<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_gray_900"
    android:orientation="vertical"
    tools:context=".ui.GameFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/_glStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/_10sdp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/_glEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/_10sdp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/_glTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/_5sdp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/_glBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="@dimen/_10sdp" />

    <!--    <ImageButton-->
    <!--        android:id="@+id/ibExit"-->
    <!--        android:layout_width="@dimen/frgGame_ibClose_size"-->
    <!--        android:layout_height="@dimen/frgGame_ibClose_size"-->
    <!--        android:layout_gravity="end"-->
    <!--        android:background="@color/transparent"-->
    <!--        android:scaleType="fitCenter"-->
    <!--        android:src="@drawable/ic_close"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="parent" />-->

    <TextView
        android:id="@+id/tvOperation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:text="2 + 2"
        android:textColor="@color/white"
        android:textSize="@dimen/_60ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/_glEnd"
        app:layout_constraintStart_toStartOf="@+id/_glStart"
        app:layout_constraintTop_toTopOf="@+id/_glTop"
        app:layout_constraintVertical_bias="0.04000002"
        tools:text="2 + 2" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etResult"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/teal_200"
        android:cursorVisible="false"
        android:focusable="false"
        android:fontFamily="@font/comfortaa_bold"
        android:inputType="none"
        android:maxLines="1"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_35ssp"
        android:text="4"
        app:layout_constraintBottom_toTopOf="@+id/_glBottom"
        app:layout_constraintEnd_toEndOf="@+id/tvOperation"
        app:layout_constraintStart_toStartOf="@+id/tvOperation"
        app:layout_constraintTop_toBottomOf="@+id/tvOperation"
        app:layout_constraintVertical_bias="0.17"
        tools:text="4" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/_glBottom"
        app:layout_constraintEnd_toStartOf="@+id/_glEnd"
        app:layout_constraintStart_toStartOf="@+id/_glStart"
        app:layout_constraintTop_toBottomOf="@+id/etResult"
        app:layout_constraintVertical_bias="0.53">


        <androidx.appcompat.widget.LinearLayoutCompat style="@style/CalculatorButtonRow">
            <com.google.android.material.button.MaterialButton
                style="@style/ActionButton"
                android:layout_span="3"
                android:backgroundTint="@color/green_a400"
                android:text="&gt;" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat style="@style/CalculatorButtonRow">

            <com.google.android.material.button.MaterialButton
                style="@style/NumericButton"
                android:text="1" />

            <com.google.android.material.button.MaterialButton
                style="@style/NumericButton"

                android:text="2" />

            <com.google.android.material.button.MaterialButton
                style="@style/NumericButton"
                android:text="3" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat style="@style/CalculatorButtonRow">
            <com.google.android.material.button.MaterialButton
                style="@style/NumericButton"
                android:text="4" />

            <com.google.android.material.button.MaterialButton
                style="@style/NumericButton"
                android:text="5" />

            <com.google.android.material.button.MaterialButton
                style="@style/NumericButton"
                android:text="6" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat style="@style/CalculatorButtonRow">

            <com.google.android.material.button.MaterialButton
                style="@style/NumericButton"
                android:text="7" />

            <com.google.android.material.button.MaterialButton
                style="@style/NumericButton"
                android:text="8" />

            <com.google.android.material.button.MaterialButton
                style="@style/NumericButton"
                android:text="9" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat style="@style/CalculatorButtonRow">
            <com.google.android.material.button.MaterialButton
                style="@style/NumericButton"
                android:layout_weight="2"
                android:text="0" />

            <com.google.android.material.button.MaterialButton
                style="@style/ActionButton"
                android:backgroundTint="@color/red_700"
                android:text="&lt;" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>