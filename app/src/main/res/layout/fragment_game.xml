<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_midnight"
        android:orientation="vertical"
        tools:context=".ui.game.GameFragment">

    <!--region Button Close-->
    <ImageButton
            android:id="@+id/ibClose"
            android:layout_width="@dimen/frgGame__ibClose__size"
            android:layout_height="@dimen/frgGame__ibClose__size"
            android:src="@drawable/ic_close"
            android:scaleType="fitCenter"
            android:background="@color/transparent"
            android:layout_gravity="end" />
    <!--endregion-->

    <!--region Operation-->
    <TextView
            android:id="@+id/tvOperation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/frgGame__tvOperation_textSize"
            android:textStyle="bold"
            android:layout_gravity="center|top"
            android:layout_marginTop="10dp"
            tools:text="2 + 2" />
    <!--endregion-->

    <!--region EditText Result-->
    <EditText
            android:id="@+id/etResult"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textAlignment="center"
            android:backgroundTint="@color/teal_200"
            android:focusable="false" />
    <!--endregion-->

    <!-- TODO: to fix: for some reason in the executed app the view seems cut on the bottom of the keyboard. -->
     
    <!--region Numeric keyboard-->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom">

        <GridLayout
                android:id="@+id/tlNumericKeyboard"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:rowCount="5"
                android:columnCount="3"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp">

            <!--region Button next-->
            <ImageButton
                    android:id="@+id/ibNext"
                    style="@style/ibNumericButtons"
                    android:src="@drawable/ic_btn_next"
                    android:layout_width="305dp"
                    android:layout_columnSpan="3" />
            <!--endregion-->

            <!--region 7-->
            <ImageButton
                    android:id="@+id/ib7"
                    style="@style/ibNumericButtons"
                    android:src="@drawable/ic_btn_7" />
            <!--endregion-->

            <!--region 8-->
            <ImageButton
                    android:id="@+id/ib8"
                    style="@style/ibNumericButtons"
                    android:src="@drawable/ic_btn_8" />
            <!--endregion-->

            <!--region 9-->
            <ImageButton
                    android:id="@+id/ib9"
                    style="@style/ibNumericButtons"
                    android:src="@drawable/ic_btn_9" />
            <!--endregion-->

            <!--region 4-->
            <ImageButton
                    android:id="@+id/ib4"
                    style="@style/ibNumericButtons"
                    android:src="@drawable/ic_btn_4" />
            <!--endregion-->

            <!--region 5-->
            <ImageButton
                    android:id="@+id/ib5"
                    style="@style/ibNumericButtons"
                    android:src="@drawable/ic_btn_5" />
            <!--endregion-->

            <!--region 6-->
            <ImageButton
                    android:id="@+id/ib6"
                    style="@style/ibNumericButtons"
                    android:src="@drawable/ic_btn_6" />
            <!--endregion-->

            <!--region 1-->
            <ImageButton
                    android:id="@+id/ib1"
                    style="@style/ibNumericButtons"
                    android:src="@drawable/ic_btn_1" />
            <!--endregion-->

            <!--region 2-->
            <ImageButton
                    android:id="@+id/ib2"
                    style="@style/ibNumericButtons"
                    android:src="@drawable/ic_btn_2" />
            <!--endregion-->

            <!--region 3-->
            <ImageButton
                    android:id="@+id/ib3"
                    style="@style/ibNumericButtons"
                    android:src="@drawable/ic_btn_3" />
            <!--endregion-->

            <!--region 0-->
            <ImageButton
                    android:id="@+id/ib0"
                    style="@style/ibNumericButtons"
                    android:src="@drawable/ic_btn_0"
                    android:layout_height="80dp"
                    android:layout_width="180dp"
                    android:layout_columnSpan="2" />
            <!--endregion-->

            <!--region Button clear-->
            <ImageButton
                    android:id="@+id/ibClear"
                    style="@style/ibNumericButtons"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_btn_clear" />
            <!--endregion-->

        </GridLayout>

    </LinearLayout>
    <!--endregion-->

</LinearLayout>