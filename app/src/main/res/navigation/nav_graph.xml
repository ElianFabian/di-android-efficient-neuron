<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/operationsFragment">

    <fragment android:id="@+id/operationsFragment"
        android:name="com.elian.computeit.ui.OperationsFragment"
        android:label="fragment_operations"
        tools:layout="@layout/fragment_operations">
        <action android:id="@+id/action_operationsFragment_to_testConfigurationFragment"
            app:destination="@id/testConfigurationFragment" />
    </fragment>
    <fragment
        android:id="@+id/testConfigurationFragment"
        android:name="com.elian.computeit.feature_tests.presentation.test_configuration.TestConfigurationFragment"
        android:label="fragment_test_configuration"
        tools:layout="@layout/fragment_test_configuration">
        <action
            android:id="@+id/action_testConfigurationFragment_to_testFragment"
            app:destination="@id/testFragment" />
        <action android:id="@+id/action_testConfigurationFragment_to_functionsFragment"
            app:destination="@id/operationsFragment" />
    </fragment>
    <fragment
        android:id="@+id/testFragment"
        android:name="com.elian.computeit.feature_tests.presentation.test.TestFragment"
        android:label="fragment_test"
        tools:layout="@layout/fragment_test" >
        <action
            android:id="@+id/action_testFragment_to_testEndFragment"
            app:destination="@id/testEndFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:launchSingleTop="false" />
    </fragment>
    <fragment
        android:id="@+id/testEndFragment"
        android:name="com.elian.computeit.feature_tests.presentation.test_end.TestEndFragment"
        android:label="fragment_test_end"
        tools:layout="@layout/fragment_test_end" />
</navigation>