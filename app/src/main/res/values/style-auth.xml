<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Auth_TextInputLayout" parent="@style/TextInputLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:layout_marginEnd">@dimen/_20sdp</item>
    </style>

    <style name="Auth_ProgressBar">
        <item name="android:layout_width">@dimen/_70sdp</item>
        <item name="android:layout_height">@dimen/_70sdp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/_15sdp</item>
        <item name="android:visibility">invisible</item>
    </style>

</resources>