<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_1"
    android:gravity="center"
    tools:context=".ui.functions.FunctionsFragment">
    
    <!--region Sum and Subtraction-->
    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!--region Sum-->
        <ImageButton
            android:id="@+id/ibAddition"
            style="@style/ibFunctions"
            android:src="@drawable/ic_addition"
            tools:ignore="SpeakableTextPresentCheck" />
        <!--endregion-->

        <!--region Subtraction-->
        <ImageButton
            android:id="@+id/ibSubtraction"
            style="@style/ibFunctions"
            android:src="@drawable/ic_subtraction"
            tools:ignore="SpeakableTextPresentCheck" />
        <!--endregion-->

    </TableRow>
    <!--endregion-->

    <!--region Multiplication y Division-->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--region Multiplication-->
        <ImageButton
            android:id="@+id/ibMultiplication"
            style="@style/ibFunctions"
            android:src="@drawable/ic_multiplication"
            tools:ignore="SpeakableTextPresentCheck" />
        <!--endregion-->

        <!--region Division-->
        <ImageButton
            android:id="@+id/ibDivision"
            style="@style/ibFunctions"
            android:src="@drawable/ic_division"
            tools:ignore="SpeakableTextPresentCheck" />
        <!--endregion-->

    </TableRow>
    <!--endregion-->

</TableLayout>